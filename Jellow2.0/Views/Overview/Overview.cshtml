@model Jellow2._0.ViewModels.JobAndProjectViewModel

@{
    ViewBag.Title = "Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<link rel="stylesheet" type="text/css" href="~/Content/general-styling.css" />
<link rel="stylesheet" type="text/css" href="~/Content/JobOrProject.css" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Overview</title>
</head>
<body>
    <div>
        <p class="create-new">

        </p>
        <table class="index-table">
            <tr>
                <th>
                    Job
                </th>
                <th>
                    Function
                </th>
                <th>
                    Description
                </th>
                <th>
                    Salary
                <th>
                    Available
                </th>
                <th>Start Date</th>
            </tr>
            @foreach (var item in Model.allJobs)
            {
                <tr>
                    <td>
                        @item.JobID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Salary
                    </td>
                    <td>
                        @if (item.FreelancerID == null)
                        {
                            <label>Available</label>
                        }
                        else
                        {
                            <label>Not Available</label>
                        }

                    </td>
                    <td>
                        @item.StartDate
                    </td>
                    @if (item.FreelancerID == null)
                    {
                        <td class="bordered-outset">
                            @Html.ActionLink("Accept", "AcceptJob", "Overview", new { JobID = item.JobID }, null)
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
    <hr />

    <div>
        <table class="index-table">
            <tr>
                <th>
                    Project
                </th>
                <th>
                    Function
                </th>
                <th>
                    Description
                </th>
                <th>
                    Budget
                </th>
                <th>
                    Available
                </th>
                <th>
                    Due Date
                </th>
            </tr>
            @foreach (var item in Model.allProjects)
            {
                <tr>
                    <td>
                        @item.ProjectID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Budget
                    </td>
                    <td>
                        @if (item.FreelancerID == null)
                        {
                            <label>Available</label>
                        }
                        else
                        {
                            <label>Not Available</label>
                        }
                    </td>
                    <td>
                        @item.DueDate
                    </td>
                    <td>
                        @Html.ActionLink("Accept", "AcceptProject", "Overview", new { ProjectID = item.ProjectID }, null)
                    </td>
                </tr>
            }
        </table>
    </div>
    @{ if (ViewBag.Message != null)
        {
            <label>@ViewBag.Message</label>
        }
    }
</body>


</html>


