<!DOCTYPE html>
<link rel="stylesheet" type="text/css" href="~/Content/general-styling.css" />
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #0B0C10">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #0B0C10">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ICT-WorkSpot.com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color: #45a29e" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "color: #45a29e" })</li>
                    <li>@Html.ActionLink("Company", "Index", "Company", null, new { @style = "color: #45a29e" })</li>
                    <li>@Html.ActionLink("Consumer", "Index", "Consumer", null, new { @style = "color: #45a29e" })</li>
                    <li>@Html.ActionLink("Freelancer", "Index", "Freelancer", null, new { @style = "color: #45a29e" })</li>
                    <li>@Html.ActionLink("Work Overview", "Overview", "Overview", null, new { @style = "color: #45a29e" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content" style="background-color: #0B0C10">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - ICT-WorkSpot.com</p>
            </footer>
        </div>
        <div class="col-md-2"></div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
