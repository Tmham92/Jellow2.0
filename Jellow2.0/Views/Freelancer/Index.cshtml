@model IEnumerable<Jellow2._0.Database.Freelancer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/general-styling.css"/>
<h3>All Signed-up Freelancers</h3>

<p class="create-new">
    @Html.ActionLink("Create New", "Create", null, new { @class = "basic-hyperlink" })
</p>
<table class="index-table">
    <tr>
        <th>
            @Html.ActionLink("ID", "Index", new { sortOrder = ViewBag.IDParam }, new { @class = "basic-hyperlink" })
        </th>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameParam }, new { @class = "basic-hyperlink" })
        </th>
        <th>
            @Html.ActionLink("Employed", "Index", new { sortOrder = ViewBag.IsEmployedParam }, new { @class = "basic-hyperlink" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th>
            @Html.ActionLink("Skill", "Index", new { sortOrder = ViewBag.SkillParam }, new { @class = "basic-hyperlink" })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FreelancerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsEmployed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Experience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skill)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FreelancerID }, new { @class = "basic-hyperlink" }) |
            @Html.ActionLink("Details", "Details", new { id=item.FreelancerID }, new { @class = "basic-hyperlink" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FreelancerID }, new { @class = "basic-hyperlink" })
        </td>
    </tr>
}
</table>

@ViewBag.HasSkillValue
