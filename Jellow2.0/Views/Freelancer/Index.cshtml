@model IEnumerable<Jellow2._0.Database.Freelancer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/general-styling.css"/>
<h2>Index</h2>

<p class="create-new">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="index-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Employed
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skill)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsEmployed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Experience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skill)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FreelancerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FreelancerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FreelancerID })
        </td>
    </tr>
}
</table>

@ViewBag.HasSkillValue
