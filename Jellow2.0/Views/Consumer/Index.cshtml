@model IEnumerable<Jellow2._0.Database.Consumer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<link rel="stylesheet" type="text/css" href="~/Content/general-styling.css" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p class="create-new">
        @Html.ActionLink("Create New", "Create", null, new { @class = "basic-hyperlink" })
    </p>
    <table class="index-table">
        <tr>
            <th>
                @Html.ActionLink("ID", "Index", new { sortOrder = ViewBag.IDSortParam }, new { @class = "basic-hyperlink" })
            </th>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameParam }, new { @class = "basic-hyperlink" })
            </th>
            <th>
                @Html.ActionLink("Open Projects", "Index", new { sortOrder = ViewBag.ProjectPostedParam }, new { @class = "basic-hyperlink" })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsumerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasProjectPosted)
                </td>
                <td class="last-column">
                    @Html.ActionLink("Post Project", "ConsumerCreateProject", "Project", new { ConsumerID = item.ConsumerID, @Style= "color:#66fcf1;"}, new { @class = "basic-hyperlink" }) |
                    @Html.ActionLink("View Projects", "ProjectDetails", "Consumer", new { ConsumerID = item.ConsumerID }, new { @class = "basic-hyperlink" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ConsumerID }, new { @class = "basic-hyperlink" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
